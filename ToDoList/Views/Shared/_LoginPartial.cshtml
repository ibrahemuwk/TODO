@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" ,style= "margin-right: 10px" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Profile " , "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li><a style= "margin-right: 10px" href="/Account/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        <li><a style= "margin-right: 10px" href="/Account/Register"><span class="fa fa-user-plus"></span> Register</a></li>
    </ul>
}
